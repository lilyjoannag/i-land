<div class="navbar-island" id="<%= yield :navbar_id %>">

  <a href=<%= root_path %>>
  <%= image_tag("i-land2.png", id:"logotag") %>
  </a>

  <!-- Logo -->


  <!-- Right Navigation -->
  <div class="navbar-island-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <a class="navbar-island-item navbar-island-link" data-toggle="modal" data-target="#exampleModal">
        Add a dream
      </a>

      <%= link_to "My reservations", "#", class: "navbar-island-item navbar-island-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-island-item">
        <div class="dropdown">
          <%= image_tag "https://www.aquaportail.com/pictures1804/palmier-cocos-nucifera-cocotier.jpg", class: "avatar dropdown-toggle", id: "navbar-island-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-island-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-island-item navbar-island-link" %>
      <%= link_to t(".sign_up", default: "Register"), new_user_registration_path, class: "navbar-island-item navbar-island-link" %>
      <%= link_to "Add a dream", new_user_registration_path, class: "navbar-island-item navbar-island-link" %>




    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-island-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-island-dropdown-menu">
        <% if user_signed_in? %>
          <li><%= link_to "My reservations", "#" %></li>
          <li><%= link_to "Add a dream", "#" %></li>
          <li><%= link_to "Profile", "#" %></li>
          <li><%= link_to "Settings", "#" %></li>
          <li><%= link_to "Sign-out", "#" %></li>
        <% else %>
          <li><%= link_to "Sign-up", "#" %></li>
          <li><%= link_to "Add a dream", "#" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Please provide your island's name and its address so people can embark on their dream holiday</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-center">
          <%= simple_form_for(Island.new) do |f| %>
            <%= f.input :name %>
            <%= f.input :address %>
            <%= f.submit "Add island", class: "btn btn-primary" %>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <% end %>
      </div>
    </div>
  </div>
</div>
</div>

