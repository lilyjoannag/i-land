<div class="container bookings">
  <h1>My bookings</h1>
    <div class="row">
      <% @bookings.each do |booking| %>
        <div class="col-md-4">
          <div class="card">

              <%#= booking.island.photo_1 %>
              <%= image_tag("Island_5.jpg", class:"island_photo") %>
              <%= image_tag("user-default.jpg", class:"owner_photo") %>

            <!--  <div class="owner">
               <%#= booking.island.user.avatar %>

             </div> -->
            <div class="island_name">
              <%= booking.island.name %>
            </div>
            <div class="d-flex">
              <div class="details col-6">
                <p><i class="fas fa-users"></i> <%=  booking.island.number_of_guests %></p>
                <p><i class="fas fa-dollar-sign"></i> <%=  booking.island.price_per_night %></p>
              </div>
              <div class="dates col-6">
                <p> From <%= booking.start_at %></p>
                <p> To <%= booking.end_at %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
</div>
