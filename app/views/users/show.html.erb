<div class="overall-container">
  <div class="row">

   <!--  <div class="col-md-4"></div> -->

    <div class="col-md-4 col-md-offset-1 user-profile-column">
      <div class="user-profile-container">
        <div class="avatar-user-show text-center">
          <%= cl_image_tag(current_user.photo_user, class:"avatar-bordered") %>
        </div>
        <div class="details-user-show space-inside">
        <h5>
          <h3><%= current_user.first_name %> <%= @current_user.last_name %></h3>
        </h5>
        <p><%= current_user.email %></p>
        <%= link_to "Edit", edit_user_path(current_user), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <div class="col-md-4 col-md-offset-1 user-islands-column">
      <div class="user-islands-title">
        <h3>My Islands</h3>
      </div>
      <div class="user-islands-container">
        <% current_user.islands.each do |island|  %>
         <div class="cards-without-carousel">
            <div class="card-index">
              <div class="card-body">
                <h2><%= island.name%></h2>
                  <div class="description-hidden">
                   <p><%=  island.description%></p>
                   <%= link_to "", island_path(island), class: "card-link" %>
              </div>

               </div>
               <div class="card-footer">
                 <div >
                   <p><%= island.number_of_guests %></p>
                   <i class="fas fa-users"></i>
                 </div>
                 <div>
                   <p><%= island.price_per_night %></p>
                   <i class="fas fa-dollar-sign"></i>
                 </div>

               </div>
             </div>
         </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
