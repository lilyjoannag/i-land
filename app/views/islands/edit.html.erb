<div class="grid-container">
  <%= simple_form_for(@island) do |f| %>
    <div class="show-card photo-element">
      <h3>Add Photos of Your Island</h3>
      <%= f.input :photo_1 %>
      <%= f.input :photo_1_cache, as: :hidden %>
      <%= f.input :photo_2 %>
      <%= f.input :photo_2_cache, as: :hidden %>
      <%= f.input :photo_3 %>
      <%= f.input :photo_3_cache, as: :hidden %>
    </div>
    <div class="show-card description-element">
      <h3><%= f.input :name, placeholder:"Enter your Island Name" %></h3>
      <h3><%= f.input :description, placeholder:"Enter information about your island, its features, layout and atmosphere"%></h3>
      <div class="show-card owner-element">
        <h3>About Yourself</h3>
        <img src='https://kitt.lewagon.com/placeholder/users/arthur-littm' class="avatar-large"/>
        <p>User Full Name Here</p>
      </div>
    </div>
      <div class="show-card dates-element">
        <h3>Dates</h3>
      </div>
      <div class="show-card map-element">
        <h3><%= f.input :address, placeholder:"Enter your latitude and longitude" %></h3>
      </div>
    <%= f.submit "Update Island", class: "btn btn-primary update-island-button" %>
  <% end %>
</div>
