<div class="wrapper">
  <div class="side-search">
    <div class="search_container">
        <p class="search_title">
            Embark on your journey
        </p>
        <input class="search__input" type="text" placeholder="Search">
    </div>

  </div>
  <div class="content col-xs-10 col-xs-offset-1 ">
    <div class="title-layout">
      <h5>Discover a new paradise</h5>
    </div>
    <div id="map" data-markers="<%= @markers.to_json %>">
    </div>
    <div class="p-layout">
    <h5>Popular islands</h5>
    </div>
    <p>Book an island hosted by our certified hosts for your next trip</p>
    <div class="cards">
      <div class="carousel-index">
        <% @islands.each do |island| %>
          <div class="carousel-index-card-item card">
            <div class="card-body">
              <h2><%=  island.name%></h2>
              <div class="description-hidden">
                <p><%=  island.description%></p>
                <%= link_to "", island_path(island), class: "card-link" %>
              </div>

            </div>
            <div class="card-footer">
              <div >
                <p>20</p>
                <i class="fas fa-users"></i>
              </div>
              <div>
                <p>50000</p>
                <i class="fas fa-dollar-sign"></i>
              </div>

            </div>


          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script src="https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/markerclusterer.js">
    </script>
<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<!-- Latest compiled and minified JavaScript -->
<!-- Gmaps JavaScript -->
<%=  javascript_include_tag "//maps.google.com/maps/api/js?key=#{ENV['gmap_key']}"%>
